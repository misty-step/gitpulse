# Clerk Authentication (required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# GitHub OAuth App Configuration
GITHUB_OAUTH_CLIENT_ID=your_oauth_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# GitHub App Configuration
GITHUB_APP_ID=your_app_id
GITHUB_APP_PRIVATE_KEY_PKCS1="-----BEGIN RSA PRIVATE KEY-----
your_private_key_here
-----END RSA PRIVATE KEY-----"
GITHUB_APP_NAME=your_app_name
NEXT_PUBLIC_GITHUB_APP_NAME=your_app_name

# AI API Keys (Gemini for reports, OpenAI as fallback)
GOOGLE_API_KEY=your_google_api_key
OPENAI_API_KEY=your_openai_api_key

# GitHub API Rate Limit Control
# Set to 'false' to revert to parallel fetching (may hit rate limits)
# Default: true (serial fetching with 100ms delays - rate limit safe)
# GITHUB_SERIAL_FETCH=true

# GraphQL API Feature Flags
# Enable GraphQL API for commit fetching (reduces API calls by ~90%)
# Default: false (uses REST API with serial fetching)
FEATURE_GRAPHQL_COMMITS=false

# GraphQL batch size for repository queries (max 50)
# Default: 50
# FEATURE_GRAPHQL_BATCH_SIZE=50

# GraphQL page size for commit pagination (max 100)
# Default: 100
# FEATURE_GRAPHQL_PAGE_SIZE=100

# Error Tracking Configuration
# Sentry error tracking and performance monitoring
# Organization: misty-step, Project: gitpulse
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn
SENTRY_ORG=misty-step
SENTRY_PROJECT=gitpulse
# SENTRY_AUTH_TOKEN=your-auth-token-from-sentry (required for releases, set in GitHub secrets)
# Convex Deploy Keys (set in Vercel; preview uses preview:..., production uses prod:...)
CONVEX_DEPLOY_KEY=your_convex_deploy_key
# Optional: separate preview key if you distinguish environments
# CONVEX_PREVIEW_DEPLOY_KEY=preview:your-branch-key

# E2E Testing - Clerk Test User Credentials
# Create a test user in Clerk Dashboard with email/password auth
# Email with +clerk_test suffix enables test mode (no real emails sent)
# Email/password strategy is simpler than GitHub OAuth for E2E automation
# IMPORTANT: Use a unique, strong password (Clerk checks against breach databases)
# Generate with: openssl rand -base64 24
E2E_CLERK_USER_EMAIL=test+clerk_test@gitpulse.app
E2E_CLERK_USER_PASSWORD=your-unique-secure-password-here
