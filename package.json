{
  "name": "gitpulse",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"next dev\" \"npx convex dev\"",
    "build": "pnpm build:app",
    "build:app": "next build",
    "build:local": "npx convex deploy && next build",
    "start": "next start",
    "lint": "eslint app convex components hooks lib tests --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "env:check": "node scripts/env-check.mjs",
    "verify:hooks": "scripts/check-hooks.sh",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "convex": "npx convex dev",
    "convex:deploy": "npx convex deploy",
    "reports:generate": "npx convex run actions/reports/regenerate:regenerate",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "prepare": "if [ -d .git ]; then lefthook install; else echo \"Skipping lefthook (no .git)\"; fi"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.34.1",
    "@sentry/nextjs": "^10.26.0",
    "@vercel/analytics": "^1.5.0",
    "convex": "^1.28.0",
    "isomorphic-dompurify": "^2.32.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^12.0.2",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "pino": "^10.1.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sonner": "^2.0.7",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/eslintrc": "^3.3.1",
    "@jest/globals": "^30.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "import-in-the-middle": "^2.0.0",
    "jest": "29",
    "jsdom": "^27.2.0",
    "lefthook": "^2.0.4",
    "prettier": "^3.3.3",
    "require-in-the-middle": "^8.0.1",
    "tailwindcss": "^4",
    "ts-jest": "29",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
